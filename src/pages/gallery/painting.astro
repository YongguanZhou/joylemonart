---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE } from "../../site";

const images = Array.from({ length: 25 }, (_, i) => {
  const n = String(i + 1).padStart(3, "0");
  return {
    src: `/images/gallery/${n}.png`,
    alt: `Painting ${n}`,
    name: n,
  };
});
---

<BaseLayout title={`Paintings Gallery | ${SITE.title}`} description={SITE.description}>
  <main class="page-home">
    <section class="wrap">

      <div class="grid" id="galleryGrid">
        {images.map((img, idx) => (
          <button
            class="tile"
            type="button"
            data-index={idx}
            aria-label={`Open ${img.alt}`}
            title={`Open ${img.name}`}
          >
            <img
              src={img.src}
              alt={img.alt}
              loading="lazy"
              decoding="async"
            />
          </button>
        ))}
      </div>
    </section>

    {/* Lightbox */}
    <div class="lightbox" id="lightbox" aria-hidden="true">
      <div class="lb-backdrop" data-close></div>

      <div class="lb-panel" role="dialog" aria-modal="true" aria-label="Artwork viewer">
        <button class="lb-close" type="button" aria-label="Close" data-close>×</button>

        <button class="lb-nav lb-prev" type="button" aria-label="Previous" data-prev>‹</button>

        <figure class="lb-figure">
          <img id="lbImg" alt="Artwork preview" />
          <figcaption class="lb-caption" id="lbCaption"></figcaption>
        </figure>

        <button class="lb-nav lb-next" type="button" aria-label="Next" data-next>›</button>
      </div>
    </div>

    <script define:vars={{ images }}>
      const grid = document.getElementById("galleryGrid");
      const lb = document.getElementById("lightbox");
      const lbImg = document.getElementById("lbImg");
      const lbCaption = document.getElementById("lbCaption");

      let current = 0;

      function lockScroll(locked) {
        document.documentElement.style.overflow = locked ? "hidden" : "";
      }

      function openAt(index) {
        current = index;
        const item = images[current];

        // 先清空再赋值，避免快速切换时残影
        lbImg.removeAttribute("src");
        lbImg.setAttribute("src", item.src);
        lbImg.setAttribute("alt", item.alt);
        lbCaption.textContent = `${item.name} / ${images.length}`;

        lb.classList.add("is-open");
        lb.setAttribute("aria-hidden", "false");
        lockScroll(true);
      }

      function close() {
        lb.classList.remove("is-open");
        lb.setAttribute("aria-hidden", "true");
        lockScroll(false);
      }

      function prev() {
        openAt((current - 1 + images.length) % images.length);
      }

      function next() {
        openAt((current + 1) % images.length);
      }

      grid?.addEventListener("click", (e) => {
        const btn = e.target.closest("button.tile");
        if (!btn) return;
        const idx = Number(btn.dataset.index);
        if (Number.isFinite(idx)) openAt(idx);
      });

      lb?.addEventListener("click", (e) => {
        const t = e.target;
        if (t.matches("[data-close]")) close();
        if (t.matches("[data-prev]")) prev();
        if (t.matches("[data-next]")) next();
      });

      document.addEventListener("keydown", (e) => {
        if (!lb.classList.contains("is-open")) return;
        if (e.key === "Escape") close();
        if (e.key === "ArrowLeft") prev();
        if (e.key === "ArrowRight") next();
      });

      // 预加载：打开后预加载前后各一张（更顺滑）
      lbImg?.addEventListener("load", () => {
        const preload = (i) => {
          const img = new Image();
          img.src = images[i].src;
        };
        preload((current + 1) % images.length);
        preload((current - 1 + images.length) % images.length);
      });
    </script>

    <style>
      .wrap {
        display: flex;
        flex-direction: column;
        gap: 18px;
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 16px 24px;
      }

      .head {
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .title {
        margin: 0;
        font-size: 28px;
        line-height: 1.2;
      }

      .sub {
        margin: 0;
        opacity: 0.75;
        font-size: 14px;
      }

      /* Grid */
      .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
      }

      @media (max-width: 980px) {
        .grid { grid-template-columns: repeat(2, 1fr); }
      }

      .tile {
        border: 0;
        padding: 0;
        background: transparent;
        cursor: pointer;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0,0,0,0.10);
        transition: transform 160ms ease, box-shadow 160ms ease;
      }

      .tile:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.14);
      }

      .tile img {
        width: 100%;
        height: auto;
        display: block;
      }

      /* Lightbox */
      .lightbox {
        position: fixed;
        inset: 0;
        z-index: 999;
        display: none;
      }

      .lightbox.is-open {
        display: block;
      }

      .lb-backdrop {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.70);
      }

      .lb-panel {
        position: absolute;
        inset: 18px;
        display: grid;
        grid-template-columns: 48px 1fr 48px;
        align-items: center;
        gap: 10px;
        max-width: 1100px;
        margin: 0 auto;
      }

      @media (max-width: 720px) {
        .lb-panel {
          inset: 10px;
          grid-template-columns: 44px 1fr 44px;
        }
      }

      .lb-figure {
        margin: 0;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.12);
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.35);
        display: flex;
        flex-direction: column;
      }

      .lb-figure img {
        width: 100%;
        height: calc(100vh - 140px);
        object-fit: contain;
        display: block;
        background: rgba(0,0,0,0.20);
      }

      .lb-caption {
        padding: 10px 14px;
        font-size: 13px;
        color: rgba(255,255,255,0.88);
        text-align: center;
      }

      .lb-nav {
        border: 0;
        width: 48px;
        height: 48px;
        border-radius: 999px;
        cursor: pointer;
        background: rgba(255,255,255,0.12);
        color: #fff;
        font-size: 30px;
        line-height: 48px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        transition: transform 120ms ease, background 120ms ease;
        user-select: none;
      }

      .lb-nav:hover {
        transform: scale(1.04);
        background: rgba(255,255,255,0.18);
      }

      .lb-close {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 44px;
        height: 44px;
        border-radius: 999px;
        border: 0;
        cursor: pointer;
        background: rgba(255,255,255,0.14);
        color: #fff;
        font-size: 28px;
        line-height: 44px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.25);
      }
    </style>
  </main>
</BaseLayout>
